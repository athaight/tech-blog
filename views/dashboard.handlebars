<div class="container mb-5">
  <form class="post-btn visible">
    <button type="submit" class="btn btn-primary">
      Create a Post!</button>
  </form>
</div>

<div class="container rounded-3 bg-light p-3 invisible" id="postContainer">

  <form id="formHandler">
    <div class="mb-3">
      <label class="form-label text-dark">Title:
      </label>
      <input
        type="text"
        class="form-control"
        id="title-input"
        placeholder="Enter Title"
      />
    </div>

    <div class="mb-3">
      <label class="form-label text-dark">Blog Post:
      </label>
      <input
        type="text"
        class="form-control"
        id="blogtext-input"
        placeholder="Enter Text"
      />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

</div>

<script src="/js/dashboard.js">
</script>